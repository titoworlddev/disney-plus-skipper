{
  "manifest_version": 3,
  "name": "Disney+ AutoSkip",
  "description": "This is an extension that skips the resume and intro of Disney+ videos and jumps to the next episode",
  "version": "1.0.6",
  "action": {
    "default_title": "Disney+ AutoSkip",
    "default_popup": "index.html",
    "default_icon": "logo128.png"
  },
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.disneyplus.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.disneyplus.com/*"],
      "js": ["content.js"]
    }
  ]
}
